<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.journalapp.samuel.journalapp.JournalMainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/frame_lay_container_id"
        />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/colorAccent"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:foreground="?attr/selectableItemBackground"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/journal_nav_items"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="@dimen/activity_login_margin" />

</android.support.design.widget.CoordinatorLayout>



